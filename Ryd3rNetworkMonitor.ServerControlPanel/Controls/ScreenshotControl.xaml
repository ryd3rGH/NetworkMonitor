<UserControl x:Class="Ryd3rNetworkMonitor.ServerControlPanel.Controls.ScreenshotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ryd3rNetworkMonitor.ServerControlPanel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" VerticalAlignment="Center" MaxHeight="105" MaxWidth="120" Margin="3,2,0,2" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Border BorderBrush="Aquamarine" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image x:Name="screenIm" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill"/>
            <Label x:Name="timeLbl" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
        </Grid>
    </Border>
</UserControl>
