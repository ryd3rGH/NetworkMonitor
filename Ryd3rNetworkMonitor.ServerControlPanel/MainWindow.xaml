<Window x:Class="Ryd3rNetworkMonitor.ServerControlPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ryd3rNetworkMonitor.ServerControlPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1075" Background="#FFD4D4D4" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="testTextBox" HorizontalAlignment="Left" Height="390" Margin="154,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="448" VerticalScrollBarVisibility="Visible"/>
        <Button x:Name="startBtn" Content="Start server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" Click="startBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop server" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="130" Click="stopBtn_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="390" Margin="620,10,0,0" VerticalAlignment="Top" Width="426">
            <Canvas x:Name="field"/>
        </Border>
        <Button x:Name="controlBtn" Content="Button" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="130" Click="controlBtn_Click"/>

    </Grid>
</Window>
