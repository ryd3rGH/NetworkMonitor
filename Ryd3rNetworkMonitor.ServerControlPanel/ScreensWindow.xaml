<Window x:Class="Ryd3rNetworkMonitor.ServerControlPanel.ScreensWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ryd3rNetworkMonitor.ServerControlPanel"
        mc:Ignorable="d"
        Title="ScreensWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Border BorderBrush="Aquamarine" BorderThickness="2" Margin="10">
            <Image x:Name="currImage"/>
        </Border>
        <Label x:Name="timeLbl" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="DarkViolet" Margin="0,0,0,45"/>
    </Grid>
</Window>
